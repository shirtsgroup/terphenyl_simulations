# Helical peptide solvated by water

tolerance 2.0
filetype pdb
output solvated_peptide.pdb

# Place peptide at center of box
structure em_peptide_centered.pdb
    number 1
    fixed 45. 45. 45. 90. 90. 90.
    centerofmass
end structure


# add ions
structure f.pdb
    number 13
    inside box 0. 0. 0. 90. 90. 90.
end structure

structure k.pdb
    number 13
    inside box 0. 0. 0. 90. 90. 90.
end structure

# Pack water around peptide
structure h2o.pdb
    number 7198
    inside box 0. 0. 0. 90. 90. 90.
end structure


